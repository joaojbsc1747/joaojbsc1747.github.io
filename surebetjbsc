<body>
  <header>
    <h1>Modo Superbet</h1>
    <p>Distribuição automática de stake para lucro garantido</p>
  </header>

  <main>
    <h2>Valor total investido (R$)</h2>
    <input type="number" id="totalStake" placeholder="Ex: 1000" />

    <h2>Odds</h2>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Odd</th>
          <th>Stake sugerida</th>
          <th>Lucro</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody id="tabelaOdds"></tbody>
    </table>

    <button class="add" onclick="addOdd()">➕ Adicionar odd</button>
    <button class="calc" onclick="calcularSuperbet()">Calcular Superbet</button>

    <div class="resultado" id="resultado"></div>
  </main>

  <script>
    const tabela = document.getElementById('tabelaOdds');
    let count = 0;

    function addOdd() {
      count++;
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td>${count}</td>
        <td><input type="number" step="0.01" class="odd" placeholder="Ex: 2.10"></td>
        <td class="stake">-</td>
        <td class="lucro">-</td>
        <td><button class="remove" onclick="this.closest('tr').remove()">Remover</button></td>
      `;
      tabela.appendChild(tr);
    }

    addOdd();
    addOdd();

    function calcularSuperbet() {
      const totalStake = parseFloat(document.getElementById('totalStake').value);
      const rows = document.querySelectorAll('#tabelaOdds tr');
      const odds = [];

      rows.forEach(row => {
        const odd = parseFloat(row.querySelector('.odd').value);
        if (!isNaN(odd)) odds.push({ row, odd });
      });

      if (odds.length < 2 || isNaN(totalStake)) return;

      const somaInversos = odds.reduce((s, o) => s + (1 / o.odd), 0);

      if (somaInversos >= 1) {
        document.getElementById('resultado').innerText = '❌ Não é Superbet (soma ≥ 1)';
        return;
      }

      let lucroFinal = 0;

      odds.forEach(o => {
        const stake = totalStake * ((1 / o.odd) / somaInversos);
        const retorno = stake * o.odd;
        lucroFinal = retorno - totalStake;

        o.row.querySelector('.stake').innerText = 'R$ ' + stake.toFixed(2);
        o.row.querySelector('.lucro').innerText = 'R$ ' + lucroFinal.toFixed(2);
      });

      document.getElementById('resultado').innerText = `✅ SUPERBET ATIVA | Lucro garantido: R$ ${lucroFinal.toFixed(2)}`;
    }
  </script>
</body>
